<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background"
    tools:context=".MainActivity2">


    <ImageView
        android:id="@+id/imageView2"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.205"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.097"
        app:srcCompat="@drawable/welcome" />



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/usernamel"
        app:errorEnabled="true"
        android:drawableStart="@drawable/ic_baseline_person_24"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="354dp"
        android:layout_height="102dp"
        app:boxBackgroundColor="#ECECEC"
        app:boxStrokeColor="#989898"
        app:counterMaxLength="25"
        app:counterTextColor="@color/Background"
        app:endIconMode="clear_text"
        app:helperText="Required"

        app:errorTextAppearance="@color/ManinGreen"
        app:errorTextColor="@color/ManinGreen"
        app:boxStrokeErrorColor="@color/Background"



        app:hintTextColor="@color/ManinGreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.622"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.149">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="337dp"
            android:layout_height="58dp"
            android:hint="@string/username"

            app:errorTextAppearance="@color/ManinGreen"
            app:errorTextColor="@color/ManinGreen"


            android:padding="5sp"
            android:drawableStart="@drawable/ic_baseline_person_24"
        android:id="@+id/username"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:maxLength="25"
            app:hintTextColor="@color/ManinGreen"
            app:layout_constraintBottom_toTopOf="@+id/til_"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.366"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.207" />


    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/pass"
        app:errorTextAppearance="@color/ManinGreen"
        app:errorTextColor="@color/ManinGreen"

        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="354dp"
        android:layout_height="102dp"
        android:drawableStart="@drawable/ic_baseline_person_24"
        app:boxBackgroundColor="#ECECEC"
        app:boxStrokeColor="#989898"
        app:counterMaxLength="25"
        app:counterTextColor="@color/Background"
        app:endIconMode="password_toggle"
        app:passwordToggleEnabled="false"
        app:helperText="Required"
        app:hintTextColor="@color/ManinGreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.719"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.4">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="337dp"
            android:layout_height="58dp"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:hint="@string/password"
            android:imeOptions="actionNext"
            android:id="@+id/password"

            app:errorTextAppearance="@color/ManinGreen"
            app:errorTextColor="@color/ManinGreen"


            android:inputType="textPersonName"
            android:maxLength="25"
            android:padding="5sp"
            app:hintTextColor="@color/ManinGreen"
            app:layout_constraintBottom_toTopOf="@+id/til_"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.366"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.207" />


    </com.google.android.material.textfield.TextInputLayout>

    <Button


        android:id="@+id/button"
        android:layout_width="229dp"
        android:layout_height="51dp"
        android:text="@string/button"
        android:textColor="#41b49b"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pass"
        app:layout_constraintVertical_bias="0.32" />


</androidx.constraintlayout.widget.ConstraintLayout>